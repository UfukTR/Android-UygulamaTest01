<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/txtSayi1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/txtSayi2"
            app:layout_constraintStart_toStartOf="@+id/txtSayi1" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSayi1"/>
    <TextView
            android:text="Sonuç Burada Görüntülenecek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView58"
            app:layout_constraintStart_toStartOf="@+id/txtSayi2" android:layout_marginTop="28dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSayi2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Topla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTopla"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonCikar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
    <Button
            android:text="Çıkar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCikar"
            android:layout_marginTop="28dp"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toBottomOf="@+id/textView58"
            app:layout_constraintStart_toEndOf="@+id/buttonTopla"
    />
    <Button
            android:text="Çarp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCarp"
            app:layout_constraintStart_toStartOf="@+id/buttonTopla"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonBol"/>
    <Button
            android:text="Böl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBol"
            app:layout_constraintStart_toStartOf="@+id/buttonCikar" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCikar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.012"
    />

</android.support.constraint.ConstraintLayout>